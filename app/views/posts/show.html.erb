<div class="align">

<h1><%=@post.title%></h1>

<%=image_tag @post.img%>

<p><h5><%=@post.content%></h5></p>

    <h4>
        <%@post.tags.each do |t|%>
        <%= link_to "#{t.name}", tag_path(t)%>     
        <%end%> </br>
    </h4>

        </br>
        
        </br>
        </br>
    
    
    

       
<% if current_user && current_user.id == @post.user_id %>
   
    <%= link_to "Edit Post", edit_post_path(@post) %> |

    <%= link_to "Delete", post_path(@post), :method => "delete"%> |
<%end%>

<%=link_to "Back to Home", '/'%>

</div>