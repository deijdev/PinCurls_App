

<h3>Name: <%= @user.name %> </h3>
<h3>Username: <%= @user.username %> </h3>

<%=image_tag @user.img%></br>
<%= link_to "Edit Profile", edit_user_path%>


</br>

<%=link_to "Delete Account", user_path(@user), :method => :delete%> </br>



<div class= "align">


<h2>My Favorite Posts: </h2>

 <% @user.favorites.each do |f| %>
    <%=link_to f.post.title, post_path(f.post)%> <br>
        <%=image_tag f.post.img %>
    
    <%end%>




<% if !current_user.posts.empty? %>
    <h2>My Posts: </h2>
    
      
        <% current_user.posts.each do |p| %>
       <%=link_to p.title, post_path(p)%> <br>
            <%=image_tag p.img %></br>
        
        <%end%>
    
<%end%>


</div>
