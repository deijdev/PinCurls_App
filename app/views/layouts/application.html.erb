<!DOCTYPE html>
<html>
  <head>
    <title>Pincurls</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%=link_to "All Posts", posts_path%> | <%=link_to "Create A Post", new_post_path%>  
  
    <% if session[:user_id].nil? %>
      <%= link_to "Login", login_path%>
    <%else%>
      <h3>Logged In: <%= current_user.username %></h3>
    <%end%>

    <h1>PinCurls</h1>
  
  
    <%= yield %>
    <%=link_to "Logout", logout_path%>
  </body>
</html>
