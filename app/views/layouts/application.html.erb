<!DOCTYPE html>
<html>
  <head>
    <title>Pincurls</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%=link_to "Home", '/' %> | <%=link_to "Create A Post", new_post_path%> 
  <hr>
    <% if session[:user_id].nil? %>
      <%= link_to "Login", login_path%>
      
    <%else%>
      <h4>Logged In: <%= current_user.username %></h4>
      <h4><%=link_to "My Profile", user_path(current_user.id)%></h4>
    <%end%>

     
    <h1>PinCurls</h1>
    <hr>
  
    <%= yield %>
    <hr>
    <% if session[:user_id] %>
    <%=link_to "Logout", logout_path%> 

    <%end%>

  </body>
</html>
