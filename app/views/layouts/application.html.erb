<!DOCTYPE html>
<html>
  <head>
    <title>Pincurls</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <% if notice %>
      	    <%= notice %>
	    <% end %>
	
	    <% if alert %>
      	    <%= alert %>
	    <% end %>
    
    <%=link_to "Home", '/' %> 

    <hr>

      <% if current_user %>
        <%=link_to "Create A Post", new_post_path%> | <%=link_to "My Profile", user_path(current_user.id)%>
        <hr>
        <h4>Logged In: <%= current_user.username %></h4>
      

      <%else%>
         <%= link_to "Login", login_path%>

      <%end%>

      <h1>PinCurls</h1>
      <hr>

    
      <%= yield %>
     
      <hr>
      <% if session[:user_id] %>
      <%=link_to "Logout", logout_path%> 

      <%end%>

  </body>
</html>
